# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sitelens

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth Configuration (if using Google Auth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redis Configuration (Optional - for BullMQ job queuing)
# If not provided, the app will run without queue functionality
REDIS_URL=redis://localhost:6379
# OR for Redis Cloud or other hosted Redis:
# REDISCLOUD_URL=redis://username:password@host:port

# Server Configuration
PORT=3001
NODE_ENV=production

# Render Configuration (for production deployments)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# PageSpeed Insights API Key (Optional)
PAGESPEED_API_KEY=your_pagespeed_api_key_here